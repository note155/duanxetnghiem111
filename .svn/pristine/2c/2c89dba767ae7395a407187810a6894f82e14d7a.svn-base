
h3 {
    font-family: 'Open Sans', sans-serif;
    font-size: 2.3rem;
    font-weight: 600;
    font-style: normal;
    color: #428DFF;
    margin-bottom: 20px;
    margin-top: 20px;
}
/* Định dạng cho mỗi phần tử trong danh sách */
.chat-item {
    background-color: #fff;
    border-radius: 5px;
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
    padding: 20px;
    margin-bottom: 20px;
    transition: all 0.3s ease;
}

    /* Hiệu ứng khi di chuột qua mỗi phần tử */
    .chat-item:hover {
        transform: translateY(-5px);
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
    }

    /* Tiêu đề của mỗi phần tử */
    .chat-item h5 {
        margin-top: 0;
        margin-bottom: 10px;
        font-size: 1.2rem;
        color: #333;
    }

    /* Nội dung của mỗi phần tử */
    .chat-item p {
        margin-top: 0;
        margin-bottom: 10px;
        color: #666;
    }

/* Nút xem chi tiết */
.btn-view {
    background-color: #007bff;
    color: #fff;
    padding: 8px 15px;
    border-radius: 5px;
    text-decoration: none;
    transition: all 0.3s ease;
}

    /* Hiệu ứng khi di chuột qua nút */
    .btn-view:hover {
        background-color: #0056b3;
    }

