.container {
    margin-top: 50px;
}

.activity-history {
    background-color: #ffffff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

    .activity-history h3 {
        margin-bottom: 20px;
        color: #333333;
        font-size: 24px;
    }

    .activity-history ul {
        list-style-type: none;
        padding: 0;
    }

    .activity-history li {
        font-size: 18px;
        color: #555555;
        padding: 5px 0;
    }

        .activity-history li:first-child {
            padding-top: 0;
        }

        .activity-history li:last-child {
            padding-bottom: 0;
        }

.patient-info {
    background-color: #f8f9fa;
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

    .patient-info h3 {
        margin-bottom: 40px;
        color: #007bff;
        font-size: 36px;
        border-bottom: 2px solid #007bff;
        padding-bottom: 20px;
    }

.form-group {
    margin-bottom: 40px;
}

    .form-group label {
        font-weight: bold;
        color: #333;
        font-size: 24px;
    }

    .form-group p {
        margin-top: 10px;
        font-size: 20px;
        color: #555;
    }

.btn {
    display: inline-block;
    padding: 10px 20px;
    font-size: 20px;
    color: #fff;
    background-color: #007bff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    transition: background-color 0.3s;
}

    .btn:hover {
        background-color: #0056b3;
    }
@media screen and (max-width: 767px) {
    .container {
        margin-top: 10px; /* Further reduced margin for smaller screens */
    }

    .activity-history,
    .patient-info {
        margin-bottom: 20px; /* Added margin bottom */
        padding: 15px; /* Further reduced padding */
    }

        .activity-history h3,
        .patient-info h3 {
            font-size: 20px; /* Further reduced font size */
        }

    .form-group label {
        font-size: 16px; /* Further reduced font size */
    }

    .form-group p {
        font-size: 14px; /* Further reduced font size */
    }

    .btn {
        font-size: 14px; /* Further reduced font size */
        padding: 6px 12px; /* Further reduced padding */
    }
}