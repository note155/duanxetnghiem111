
body {
}

.card-body {
    margin: 4px;
    padding: 4px;
}

.card {
    position: relative;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-direction: column;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    background-color: #fff;
    background-clip: border-box;
}

.table-responsive {
    border-collapse: collapse;
    width: 100%;
    margin: -15px;
    max-width: 100%;
    margin: 0 auto;
    border-radius: 5px;
}

.table table-striped table-hover {
    width: 100%;
}

.table {
    width: 100%;
    margin-bottom: 1rem;
    color: rgb(33, 37, 41);
}

th, td {
    padding: 12px;
    text-align: center;
    background-color: #ffffff;
}

th {
    background-color: #3498db;
    color: #fff;
}

tr:nth-child(even) {
    background-color: #f2f2f2;
}

.btn {
    text-decoration: none;
    padding: 15px 20px;
    margin: 2px;
    border-radius: 5px;
    cursor: pointer;
    text-align: center;
    font-weight: bold;
    transition: background-color 0.3s ease;
}

.actions {
    margin-bottom: 30px;
    margin-top: 10px;
}

.btn-success {
    background-color: #00ce00;
    color: #fff;
}

.btn-info {
    background-color: #66b2ff;
    color: #fff;
    width: 156px;
}

.btn-danger {
    background-color: #e74c3c;
    color: #fff;
}

p {
    margin: 5px 0;
}

.color-red {
    color: red;
}

.color-blue {
    color: dodgerblue;
}

.color-green {
    color: green;
}

.InputSelectWrapper {
    width: 150px;
}

.form-control {
    font-weight: bold;
    font-size: 18px;
    text-align: center;
}

