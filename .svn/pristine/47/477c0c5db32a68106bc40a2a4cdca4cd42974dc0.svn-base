
/*thanh menu*/
.sidebar {
    position: fixed; /* Vị trí tuyệt đối */
    top: 0; /* Phía trên của màn hình */
    left: 0; /* Phía bên trái của màn hình */
    height: 100%; /* Chiều cao 100% của màn hình */
    width: 280px; /* Độ rộng của thanh menu */
    background-color: #0063c8; /* Màu nền của thanh menu */
    padding: 10px;
}

.nav-item1 {
    top: 5px;
}

.nav-link i.fa {
    font-size: 45px; /* Kích thước của biểu tượng font-awesome */
    margin-right: 10px; /* Khoảng cách giữa biểu tượng và văn bản */
}

.sidebar .nav-item {
    position: relative;
    margin: 0;
    transition: background .3s ease-in-out;
}

.sidebar .nav-link {
    display: block;
    padding: 1em 1em;
    color: #ffffff;
    text-decoration: none;
    background: 0 0;
    cursor: pointer;
    font-size: 1.2rem;
    top: 20px;
}

    .sidebar .nav-link:hover:not(.active),
    .sidebar .nav-link:hover:not(.active) i {
        background-color: #87CEFA;
        color: #fff;
    }
/* Responsive CSS */
@media only screen and (max-width: 768px) {
    .main {
        margin-left: 0; /* Không cần margin bên trái */
    }

    .nav {
        flex-direction: column; /* Hiển thị các mục menu dọc */
    }

    .nav-item1 {
        margin-bottom: 10px; /* Khoảng cách giữa các mục menu */
    }

    .nav-link {
        display: block; /* Hiển thị các mục menu dọc */
    }

        .nav-link i.fa {
            font-size: 20px; /* Kích thước của biểu tượng font-awesome */
            margin-right: 10px; /* Khoảng cách giữa biểu tượng và văn bản */
        }

    .main {
        margin-left: 0; /* Không cần margin bên trái */
    }

    .card {
        margin-bottom: 20px; /* Khoảng cách giữa các thẻ card */
    }
}
