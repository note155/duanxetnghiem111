/*doanh thu*/
/* Global Typography */
/* Global Typography */
body {
    font-family: 'Roboto', sans-serif; /* Example font family */
}

h3 {
    font-family: 'Montserrat', sans-serif; /* Example font family */
    font-weight: 600;
    color: #333;
}

.card-title {
    font-weight: 500;
    color: #007bff;
}

/* Card Styles */
.card {
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease;
}

    .card:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

/* Table Styles */
table {
    width: 100%;
    border-collapse: collapse;
}

    table td, table th {
        padding: 12px;
        border: 1px solid #ddd;
    }

    table th {
        background-color: #f0f0f0;
        text-align: left;
        font-weight: 600;
    }

/* Button Styles */
.btn {
    display: inline-block;
    padding: 8px 16px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

    .btn:hover {
        background-color: #0056b3;
    }

.formatted-number {
    /* Thêm định dạng số tiền ở đây, ví dụ: */
    font-family: Arial, sans-serif;
    color: green;
    content: attr(data-number);
    /* Thêm các thuộc tính CSS khác để định dạng số tiền */
}

