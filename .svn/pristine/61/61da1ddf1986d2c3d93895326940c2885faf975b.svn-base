
body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    color: #333;
    margin-right: 2px;
    padding: 0;
    max-width: 100%;
}

.container {
    max-width: 100%;
    margin-right: 6px;
    padding: 20px;
}

h1 {
    color: #333;
}

.meta {
    margin-top: 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.share {
    display: flex;
    align-items: center;
}

    .share a,
    .zalo-share-button {
        width: 30px;
        height: 30px;
        margin-right: 10px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

.date {
    font-size: 14px;
    color: #666;
}

.shortdescription {
    margin-top: 20px;
    text-align: justify;
    font-size: 16px;
}

.description {
    margin-top: 20px;
    text-align: justify;
    font-size: 16px;
}

.post-review {
    margin-top: 20px;
}

.post-review-form textarea {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    resize: vertical;
}

.actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.note {
    font-size: 12px;
    color: #666;
}

.btn-primary {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
}

    .btn-primary:disabled {
        background-color: #ccc;
        cursor: not-allowed;
    }

.post-review-items {
    margin-top: 20px;
}

.post-review-item {
    margin-bottom: 20px;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
}

.review-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 10px;
}

.like,
.dislike {
    cursor: pointer;
    color: #007bff;
}

    .like:after,
    .dislike:after {
        content: " Thích";
        margin-left: 5px;
    }
