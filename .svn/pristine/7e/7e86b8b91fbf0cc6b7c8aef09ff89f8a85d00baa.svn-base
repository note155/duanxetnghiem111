
body {
}

/*lịch lấy máu */
.background-container {
    background-size: cover; /* Đảm bảo hình nền che phủ đầy đủ phần container */
    background-position: center; /* Đặt vị trí hình nền ở giữa container */
    position: relative;
    overflow: hidden;
    border-radius: 5px;
}

.justify-content-center {
    width: 100%;
    height: 300px;
    margin-left: 20px;
}

.title {
    font-family: 'Roboto';
    font-weight: 700;
    font-size: 50px;
    line-height: 48px;
    color: #007bff;
    margin: auto;
    text-align: center;
}
/*form lịch*/
.custom-edit-form {
    max-width: 400px;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin-top: 35px;
}

.form-group {
    margin-bottom: 35px;
}

.form-label {
    display: block;
    margin-top: 40px;
    font-weight: bold;
    font-size: 20px;
}

.form-control {
    width: 100%;
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
}

.custom-btn {
    display: block;
    width: 100%;
    padding: 10px;
    height: 50px;
    font-size: 16px;
    background-color: #007bff;
    color: #fff;
    border: 1px solid #007bff;
    border-radius: 4px;
    cursor: pointer;
}

    .custom-btn:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

/*bảng*/

.schedule-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

    .schedule-table th, .schedule-table td {
        padding: 10px;
        text-align: center;
    }

.dxn-info {
    padding: 1px;
}

.no-info {
    color: gray;
    padding: 1px;
}

