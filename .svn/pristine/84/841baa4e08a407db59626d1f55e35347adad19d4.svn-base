
/* CSS */
.timeline {
    position: relative;
    padding: 20px 0;
}

.timeline-item {
    position: relative;
    margin: 10px 0;
}

    .timeline-item::before {
        content: '';
        position: absolute;
        width: 4px;
        height: 100%;
        background-color: #007bff; /* Màu của đường đi */
        left: 15px;
        top: 0;
    }

    .timeline-item:first-child::before {
        top: 50%;
    }

    .timeline-item:last-child::before {
        height: 50%;
    }

    .timeline-item .time {
        display: block;
        font-size: 14px;
        font-weight: bold;
    }

    .timeline-item .status {
        display: block;
        font-size: 16px;
        margin-top: 5px;
    }
