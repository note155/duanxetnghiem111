
.custom-form {
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 8px;
    background-color: #f8f9fa;
}

    .custom-form .form-group {
        margin-bottom: 20px;
    }

    .custom-form label {
        font-weight: bold;
    }

    .custom-form input,
    .custom-form select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .custom-form button {
        padding: 10px 0;
        border: none;
        border-radius: 4px;
        background-color: #007bff;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .custom-form button:hover {
            background-color: #0056b3;
        }

    .custom-form .text-danger {
        font-size: 14px;
    }

@media (max-width: 768px) {
    .custom-form {
        padding: 10px;
    }
}

.section-title {
    margin-bottom: 20px;
}

.error-message {
    color: red;
    margin-top: 10px;
}

.form-group {
    margin-bottom: 20px;
    margin-top: 20px
}

.form-label {
    font-weight: bold;
}

.form-control {
    width: 100%;
}

.btn-primary {
    margin-top: 20px;
    margin-bottom: 40px;
}
