
.overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0); /* Điều chỉnh độ mờ của overlay */
    background-size: cover;
    background-position: center;
    text-align: center;
}

.carousel-inner img {
    width: 100%;
    height: 620px;
    object-fit: cover;
}

.card {
    transition: transform 0.3s ease-in-out;
    height: 100%;
    background-color: #c0e0ff;
    margin: 0;
    display: flex;
    flex-direction: column;
}

    .card:hover {
        background-color: #59adff;
        border-color: #007bff;
        transform: scale(1.05);
    }

    .card img {
        object-fit: cover;
        width: 100%;
        height: 100%;
    }

.hoverable-card.active {
    background-color: #ff0000; /* Màu đỏ cho tab được chọn */
    border-color: #ff0000; /* Màu viền cho tab được chọn */
    transform: scale(1.05);
}

.img-fluid {
    max-width: 100%;
    max-height: 150px;
    margin-bottom: 10px;
    margin-top: 20px;
    margin-left: 15px;
}

.card-body {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    padding: 0;
}

.card-title {
    font-size: 30px;
    color: #000000 /* Giảm kích thước để phù hợp với chiều cao của card */
}

.card-text {
    flex-grow: 1;
    font-size: 16px;
}


.block-title {
    margin-top: 20px;
    margin-bottom: 20px;
    text-align: center;
}

/*Lợi ích của việc lấy máu tại nhà*/
.col-md-6 img {
    max-width: 100%;
    height: auto;
    border-radius: 10px;
}

.col-md-6 {
    margin-bottom: 20px;
}

.arrow-list {
    list-style: none;
    padding: 0;
    margin: 18px;
}

.arrow-list-item {
    display: flex;
    align-items: center;
    padding: 15px;
    border-radius: 10px;
    background-color: #f8f9fa; /* Đặt màu nền mong muốn của bạn */
    margin-bottom: 40px;
    transition: background-color 0.4s ease;
}

    .arrow-list-item img {
        width: 40px;
        margin-right: 15px;
    }

    .arrow-list-item p {
        font-family: 'Roboto';
        font-style: normal;
        font-weight: 400;
        font-size: 20px;
        line-height: 28px;
        margin: 10px;
        color: #fdfdfd;
    }

    .arrow-list-item:nth-child(1) {
        background-color: #ff13a9; /* Màu vàng */
    }

    .arrow-list-item:nth-child(2) {
        background-color: #28a745; /* Màu xanh lá cây */
    }

    .arrow-list-item:nth-child(3) {
        background-color: #007bff; /* Màu xanh da trời */
    }

    /* Hover effect */
    .arrow-list-item:hover {
        background-color: #bab3bf; /* Màu mới khi di chuột qua */
    }

/*quy trinh dat lich*/
.container1 {
    background-size: cover; /* Đảm bảo hình nền được phủ toàn bộ phần nền */
    background-position: center; /* Căn giữa hình nền */
    padding: 0px;
    transition: transform 0.3s ease-in-out;
    cursor: pointer;
    background-color: #fff; /* Màu nền ban đầu */
    width: auto;
    height: auto;
}
/*các bước hướng dẫn đặt lịch*/
.container {
    margin: 50px auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 8px;
    margin: 50px auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 8px;
}

.step {
    margin-bottom: 20px;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 8px;
}

    .step h2 {
        color: #333;
    }

    .step p {
        color: #666;
        font-size: 16px;
        line-height: 1.6;
    }


