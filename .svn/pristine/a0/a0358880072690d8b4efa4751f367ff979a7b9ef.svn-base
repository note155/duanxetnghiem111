.form-container {
    margin: 20px auto;
    max-width: 100%;
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

h3 {
    text-align: center;
    color: #007eff;
    font-family: 'Open Sans', sans-serif;
    font-size: 2.2rem;
    font-weight: 600;
    font-style: normal;
    margin-bottom: 5px;
    margin-top: 5px;
}

.form-group {
    margin-bottom: 20px;
}

label {
    font-weight: bold;
    margin-bottom: 5px;
}

.btn-submit {
    width: 100%;
    padding: 10px;
    border: none;
    background-color: #007bff;
    color: #fff;
    border-radius: 5px;
    cursor: pointer;
}

    .btn-submit:hover {
        background-color: #0056b3;
    }

.error-message {
    color: red;
}

