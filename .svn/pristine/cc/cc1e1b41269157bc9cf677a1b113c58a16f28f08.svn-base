.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

.row {
    display: flex;
    flex-wrap: wrap;
    margin-right: -15px;
    margin-left: -15px;
}

.col-lg-4 {
    flex: 0 0 100%;
    max-width: 100%;
    padding-right: 15px;
    padding-left: 15px;
}

.col-lg-8 {
    flex: 0 0 100%;
    max-width: 100%;
    padding-right: 15px;
    padding-left: 15px;
}

.activity-history,
.patient-info {
    background-color: #f9f9f9;
    padding: 20px;
    margin-bottom: 20px;
}

    .activity-history h3,
    .patient-info h3 {
        margin-top: 0;
    }

    .activity-history ul,
    .patient-info .form-group {
        margin-bottom: 0;
    }

        .activity-history ul li {
            list-style: none;
        }

.text-center {
    text-align: center;
}

.btn {
    display: inline-block;
    font-weight: 400;
    color: #212529;
    text-align: center;
    vertical-align: middle;
    user-select: none;
    background-color: #f8f9fa;
    border: 1px solid transparent;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    line-height: 1.5;
    border-radius: 0.25rem;
    transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    text-decoration: none;
}

    .btn.edit-btn {
        background-color: #007bff;
        color: #fff;
        border-color: #007bff;
    }

    .btn.add-btn {
        background-color: #28a745;
        color: #fff;
        border-color: #28a745;
    }

/* Media queries for responsiveness */

@media (min-width: 768px) {
    .col-lg-4 {
        flex: 0 0 33.333333%;
        max-width: 33.333333%;
    }

    .col-lg-8 {
        flex: 0 0 66.666667%;
        max-width: 66.666667%;
    }
}
/* Các điều chỉnh cho hiển thị trên điện thoại di động */

/* Ứng dụng phần trung tâm cho nút trên màn hình nhỏ */
.text-center {
    text-align: center;
}

/* Đảm bảo các nút chiếm toàn bộ chiều rộng trên thiết bị di động */
.btn {
    width: 100%;
    margin-bottom: 10px; /* Tạo khoảng cách giữa các nút */
}

/* Điều chỉnh độ rộng của các nút chỉnh sửa và thêm thông tin */
@media (min-width: 768px) {
    .btn {
        width: auto; /* Trở lại chiều rộng mặc định cho thiết bị lớn hơn */
    }
}
