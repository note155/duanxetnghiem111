/* Reset CSS */
* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

/* Body styles */
body {
    font-family: Arial, sans-serif;
    font-size: 16px;
    line-height: 1.6;
    background-color: #f7f7f7;
    color: #333;
}

/* Container styles */
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

/* Header styles */
.header {
    background-color: #4CAF50;
    color: #fff;
    padding: 20px;
    text-align: center;
}

/* Navigation styles */
.navbar {
    background-color: #333;
    overflow: hidden;
}

    .navbar a {
        float: left;
        display: block;
        color: #fff;
        text-align: center;
        padding: 14px 20px;
        text-decoration: none;
    }

        .navbar a:hover {
            background-color: #ddd;
            color: #333;
        }

/* Patient Info styles */
.patient-info {
    background-color: #fff;
    padding: 20px;
    margin-bottom: 20px;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

    .patient-info h2 {
        color: #4CAF50;
        margin-bottom: 10px;
    }

    .patient-info .info {
        margin-bottom: 10px;
    }

        .patient-info .info p {
            margin-bottom: 5px;
        }

/* Form styles */
.test-registration-form {
    background-color: #fff;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

    .test-registration-form h2 {
        color: #4CAF50;
        margin-bottom: 20px;
    }

    .test-registration-form .form-group {
        margin-bottom: 20px;
    }

    .test-registration-form label {
        font-weight: bold;
    }

    .test-registration-form input[type="text"],
    .test-registration-form textarea,
    .test-registration-form select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
    }

    .test-registration-form button {
        padding: 10px 20px;
        background-color: #4CAF50;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .test-registration-form button:hover {
            background-color: #45a049;
        }
/* Doctor Info styles */
.doctor-info {
    background-color: #fff;
    padding: 20px;
    margin-top: 20px;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

    .doctor-info h3 {
        color: #4CAF50;
        margin-bottom: 10px;
    }

    .doctor-info p {
        margin-bottom: 5px;
    }

    .doctor-info img {
        max-width: 100%;
        height: auto;
        margin-top: 10px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

.patient-registration-container {
    display: flex;
    justify-content: space-between;
}

.patient-info,
.test-registration-form {
    flex: 1;
    margin-right: 20px; /* Khoảng cách giữa hai phần tử */
}

.patient-registration-container {
    display: flex;
    justify-content: space-between;
    align-items: flex-start; /* Căn phần tử theo phía trên */
}

.patient-info {
    flex: 1; /* Phần thông tin bệnh nhân co giãn để chiếm phần lớn không gian có sẵn */
    max-width: 30%; /* Đặt chiều rộng tối đa */
}

.test-registration-form {
    flex: 2; /* Phần thông tin đơn đăng ký xét nghiệm chiếm phần còn lại */
    margin-left: 20px; /* Khoảng cách giữa hai phần tử */
}

button.btn-primary {
    width: 100%;
    margin-top: 20px; /* Khoảng cách từ nút đến các phần tử khác */
}

.doctor-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.doctor-details {
    flex: 1;
    margin-right: 20px; /* Khoảng cách giữa hai phần tử */
}

.doctor-image img {
    max-width: 100px; /* Đặt chiều rộng tối đa cho ảnh của bác sĩ */
    height: auto;
}

.selected-packages {
    margin-top: 10px; /* Add margin to create space between packages */
}

.price {
    font-weight: bold; /* Make price bold */
    color: #4CAF50; /* Set price color to green */
}

.total {
    font-weight: bold; /* Make total bold */
    font-size: 18px; /* Increase font size for total */
    color: #f00; /* Set total color to red */
}

.package {
    margin-bottom: 10px; /* Add margin to create space between packages */
    padding: 10px;
    background-color: #f9f9f9;
    border-radius: 5px;
}

.package {
    display: flex; /* Use flexbox for layout */
    justify-content: space-between; /* Place content at each end of the container */
    align-items: center; /* Center items vertically */
    padding: 10px; /* Add padding for spacing */
}

.package-content {
    flex: 1; /* Allow content to grow */
}

.remove-btn {
    background-color: #ff3333;
    color: #fff;
    border: none;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    font-size: 12px;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 5px; /* Điều chỉnh khoảng cách với nội dung */
}

.package {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
}

.package-content {
    flex: 1;
}

.total-mobile {
    margin-top: 10px; /* Điều chỉnh khoảng cách với phần tổng tiền */
}
/* Điều chỉnh giao diện cho các thiết bị có độ rộng màn hình nhỏ hơn hoặc bằng 768px (tablets và mobile devices) */
.reason-for-rejection {
    background-color: #fff;
    padding: 20px;
    margin-top: 20px;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    border: 2px solid #e04e22; /* Add border to make it stand out */
}

    .reason-for-rejection h2 {
        color: #e04e22;
        margin-bottom: 10px;
    }

    .reason-for-rejection p {
        margin-bottom: 5px;
        font-weight: bold; /* Increase font weight for better visibility */
        color: #333; /* Adjust text color for readability */
    }
.button-space {
    margin-right: 10px; /* Điều chỉnh khoảng cách theo nhu cầu */
}
@media only screen and (max-width: 768px) {
    .patient-registration-container {
        flex-direction: column; /* Hiển thị các phần tử dọc theo nhau */
    }

    .patient-info,
    .test-registration-form {
        width: 95%; /* Đảm bảo rằng phần thông tin đơn đăng ký xét nghiệm chiếm toàn bộ chiều rộng của màn hình */
        margin-right: 0; /* Xóa bỏ margin nếu cần thiết */
    }

    .test-registration-form {
        margin-top: 20px; /* Tạo khoảng cách giữa các phần tử */
    }

    .patient-info {
        max-width: 100%; /* Thiết lập chiều rộng tối đa là 100% */
    }
    /* Doctor Info styles */
    .doctor-info {
        background-color: #fff;
        padding: 20px;
        margin-top: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column; /* Ensure vertical stacking on smaller screens */
    }

        .doctor-info h3 {
            color: #4CAF50;
            margin-bottom: 10px;
        }

        .doctor-info p {
            margin-bottom: 5px;
        }

    .doctor-image {
        max-width: 100%; /* Ensure image does not exceed container width */
        height: auto; /* Maintain aspect ratio */
        margin-top: 10px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    .table th,
    .table td {
        font-size: 14px; /* Decrease font size for better fit */
        padding: 6px; /* Adjust padding */
    }
}
body {
    background-color: #65c3ca;
    box-sizing: border-box;
}

.header {
    background-color: #2f7e86;
    color: white;
    font-size: 1.5em;
    padding: 1rem;
    text-align: center;
    text-transform: uppercase;
}

img {
    border-radius: 50%;
    height: 60px;
    width: 60px;
}

.table-users {
    border: 1px solid #2f7e86;
    border-radius: 10px;
    box-shadow: 3px 3px 0 rgba(0, 0, 0, 0.1);
    max-width: calc(100% - 2em);
    margin: 1em auto;
    overflow: hidden;
    width: 800px;
}
table {
    width: 100%;
}
/* Modify other CSS selectors to be prefixed with the class */
.custom-table table {
    width: 100%;
}

.custom-table td,
.custom-table th {
    color: #275b60;
    padding: 10px;
}

.custom-table td {
    text-align: center;
    vertical-align: middle;
}

.custom-table th {
    background-color: #a6d1d4;
    font-weight: 300;
    text-align: center;
}

.custom-table tr:nth-child(2n) {
    background-color: white;
}

.custom-table tr:nth-child(2n+1) {
    background-color: #cce0e1;
}

@media screen and (max-width: 700px) {
    .custom-table table,
    .custom-table tr,
    .custom-table td {
        display: block;
    }

        .custom-table td:first-child {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 100px;
        }

        .custom-table td:not(:first-child) {
            clear: both;
            margin-left: 100px;
            padding: 4px 20px 4px 90px;
            position: relative;
            text-align: left;
        }

        .custom-table td:nth-child(2):before {
            content: ' ';
        }

        .custom-table td:nth-child(3):before {
            content: ' ';
        }

        .custom-table tr:first-child {
            display: none;
        }
}

@media screen and (max-width: 500px) {
    .header {
        background-color: transparent;
        color: #89c1c7;
        font-size: 2em;
        font-weight: 700;
        padding: 0;
        text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.1);
    }

    img {
        border: 3px solid;
        border-color: #cce0e1;
        height: 100px;
        margin: 0.5rem 0;
        width: 100px;
    }

    .custom-table .header {
        background-color: transparent;
        color: #89c1c7;
        font-size: 2em;
        font-weight: 700;
        padding: 0;
        text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.1);
    }

    .custom-table img {
        border: 3px solid;
        border-color: #cce0e1;
        height: 100px;
        margin: 0.5rem 0;
        width: 100px;
    }

    .custom-table td:first-child {
        background-color: #b8dce0;
        border-bottom: 1px solid #a6d1d4;
        border-radius: 10px 10px 0 0;
        position: relative;
        top: 0;
        transform: translateY(0);
        width: 100%;
    }

    .custom-table td:not(:first-child) {
        margin: 0;
        padding: 5px 1em;
        width: 100%;
    }

    .custom-table td:last-child {
        padding-bottom: 1rem !important;
    }

    .custom-table tr {
        background-color: white !important;
        border: 1px solid #d2e4e5;
        border-radius: 10px;
        box-shadow: 2px 2px 0 rgba(0, 0, 0, 0.1);
        margin: 0.5rem 0;
        padding: 0;
    }

    .custom-table .table-users {
        border: none;
        box-shadow: none;
        overflow: visible;
    }

    .table-users {
        border: none;
        box-shadow: none;
        overflow: visible;
    }
}
